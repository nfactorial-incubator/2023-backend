{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "watchPatterns": [
            "/app/*.py",
            "/app/**/*.py",
            "/scripts/*",
            "/Dockerfile",
            "/pyproject.toml"
        ]
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE"
    }
}